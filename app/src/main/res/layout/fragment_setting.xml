<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_businessman"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/imgProfile"
            app:layout_constraintStart_toEndOf="@id/imgProfile"/>

        <TextView
            android:id="@+id/txtDetailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Irvan"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtProfile"
            app:layout_constraintStart_toEndOf="@id/imgProfile"/>

        <ImageView
            android:id="@+id/imgPhoneNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_contact"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imgProfile"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/txtPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/imgPhoneNumber"
            app:layout_constraintStart_toEndOf="@id/imgPhoneNumber"/>

        <TextView
            android:id="@+id/txtDetailPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="082145860643"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtPhoneNumber"
            app:layout_constraintStart_toEndOf="@id/imgPhoneNumber"/>

        <ImageView
            android:id="@+id/imgEmail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mail_black_24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imgPhoneNumber"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/imgEmail"
            app:layout_constraintStart_toEndOf="@id/imgEmail"/>

        <TextView
            android:id="@+id/txtDetailEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="irvanxeno@gmail.com"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtEmail"
            app:layout_constraintStart_toEndOf="@id/imgEmail"/>

        <ImageView
            android:id="@+id/imgAddress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imgEmail"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/imgAddress"
            app:layout_constraintStart_toEndOf="@id/imgAddress"/>

        <TextView
            android:id="@+id/txtDetailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="irvanxeno@gmail.com"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtAddress"
            app:layout_constraintStart_toEndOf="@id/imgAddress"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>