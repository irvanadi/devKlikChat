<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardStyle" parent="CardView.Light">

    </style>

    <style name="CardStyle.Full">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="contentPadding">@dimen/padding_normal</item>
        <item name="android:layout_marginBottom">@dimen/padding_micro</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
